<html>
  <head>
    <title>24 Discourses : {{ universeId }}</title>
    <style>
      a {
        text-decoration: none;
      }
      td {
        width: 18px;
      }
      td.cell {
        background-color: ccc;
      }
      td.highlight {
        background-color: f00;
      }
      td a {
        height: 100%;
        width: 100%;
        display:block;
      }
      ul {
        padding: 0;
      }

      table.quadripod tr td {
        text-align: center;
      }

      table.quadripod tr:first-child td {
        border-bottom: 1pt solid black;
      }

      .title table.quadripod tr td {
        font-size: 2em;
        font-weight: bold;
      }

      .title table, .title h-include {
        display: inline-block;
      }

      .title h-include {
        position: relative;
        top: -8px;
        left: 28px;
      }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <div class="title">{{{ quadripodHtml }}} <h-include src="static/{{ universeId }}-map.html"></h-include></div>

    {{#universeDiscourses}}
      <div>
        <h2>{{ rotation }}</h2>
        {{{ quadripodHtml }}}
      </div>
    {{/universeDiscourses}}

    <script src="https://cdn.rawgit.com/gustafnk/h-include/c3143ff3/h-include.js"></script>
  </body>
</html>